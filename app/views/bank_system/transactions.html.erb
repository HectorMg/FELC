<% provide(:title, "Transactions") %>
<div class="general-transaction-area">
  <h2>All Transactions</h2>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Customer</th>
        <th>Provider</th>
        <th>Amount</th>
      </tr>
    </thead>
  </table>
  <div class="bank-table">
    <table class="table table-striped">
      <tbody>
        <% @transactions.reverse_each do |t|  %>
          <tr>
            <td><%= t.id %></td>
            <td><%= t.description %></td>
            <td><%= t.customer_id %></td>
            <td><%= t.provider_id %></td>
            <td>$<%= number_with_precision(t.amount, :precision => 2) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

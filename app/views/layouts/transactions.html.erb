<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'static_pages', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'dashboard', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'bank_system', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'contract', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
        <div class="row">
          <% if staff? %>
          <!-- Side Bar -->
            <%= render 'layouts/bank_sidebar' %>
        <!-- End Side Bar -->

    <!-- Dashboard -->
          <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <% end %>
        <!-- Ends if staff -->
            <h1 class="page-header">The Bank</h1>
            <%= yield %>
          </div>
    <!-- End Dashboard -->
      </div>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>

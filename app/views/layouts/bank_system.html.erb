<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'static_pages', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'dashboard', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'bank_system', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
        <div class="row">
      <% if staff? %>
      <!-- Side Bar -->
          <div class="col-sm-3 col-md-2 sidebar">
            <h5>Information</h5>
            <ul class="nav nav-sidebar">
              <li><%= link_to 'Accounts', bank_path %></li>
              <li><%= link_to 'Transaction History', transactions_path %></li>
              <li><%= link_to 'Properties', properties_path %></li>
              <li><%= link_to 'Stock Market', stocks_path %></li>
            </ul>
            <h5>Corporate Operations</h5>
            <ul class="nav nav-sidebar">
              <li><%= link_to 'New Contract', new_contract_path %></li>
              <li><%= link_to 'New Copyright', new_copyright_path %></li>
              <li><%= link_to 'Property Purchase', properties_path %></li>
              <li><%= link_to 'Stock purchase', stock_purchase_path %></li>
              <li><%= link_to 'Stock Sale', stock_sale_path %></li>
            </ul>
            <h5>Cash Box Transactions</h5>
            <ul class="nav nav-sidebar">
              <li><%= link_to 'Desposit', cbt_path %></li>
              <li><%= link_to 'Withdrawal', cbt_path %></li>
            </ul>
          </div>

    <!-- End Side Bar -->

    <!-- Dashboard -->
          <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <% end %>
        <!-- Ends if staff -->
            <h1 class="page-header">The Bank</h1>
            <%= yield %>
          </div>
    <!-- End Dashboard -->
      </div>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
